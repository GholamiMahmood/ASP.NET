<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EmployeeApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EmployeeApp.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid" style="background-color:rosybrown">
                @* <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">EmployeeApp</a> *@
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between" >
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item" >
                            <a style="color:black" class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a style="color:black" class="nav-link" asp-area="" asp-controller="Emplyee" asp-action="Index">Employee</a>
                        </li>
                        <li class="nav-item">
                            <a style="color:black" class="nav-link" asp-area="" asp-controller="Emplyee" asp-action="Graphiques">Graphiques</a>
                        </li>
                        <li class="nav-item">
                            <a style="color:black" class="nav-link" asp-area="" asp-controller="Emplyee" asp-action="Salaire">Salaire</a>
                        </li>
                        <li class="nav-item">
                            <a style ="color:black" class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
            <partial name="_LoginPartial" />
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
      @* c est une function qui appele la page de Index *@ 
        @RenderBody()
        </main>
    </div>
    
    <footer class="border-top footer text-muted" style="background-color:green;color:black">
        <div class="container" style="background-color:green;color:black">
            &copy; 2023 - EmployeeApp - <a style="color:black" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
